extends format 

block content 

    div.vertical 
        h1=data[0].name
        div#cell 
            div.cell-text Description 
            div.cell-text=data[0].description
        div#cell 
            div.cell-text Price 
            div.cell-text $!{data[0].price}
        div#cell 
            div.cell-text Number In Stock 
            div.cell-text=data[0].numberInStock    
        div#cell 
            div.cell-text Type 
            if data[0].isElectric && data[0].isAcoustic
                div.cell-text Electric-Acoustic
            else if data[0].isElectric 
                div.cell-text Electric 
            else 
                div.cell-text Acoustic  
    h3
        a(href=`/guitars/${data[0]._id}/update`) Update this product
    h3 
        a(href=`/guitars/${data[0]._id}/delete`) Delete this product
    